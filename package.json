{
  "name": "mishka-20",
  "private": true,
  "description": "Личный проект «Мишка» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.*",
    "autoprefixer": "9.8.*",
    "browser-sync": "2.26.*",
    "del": "5.1.*",
    "gulp": "4.0.*",
    "gulp-csso": "4.0.*",
    "gulp-htmlmin": "5.0.*",
    "gulp-imagemin": "^7.1.*",
    "gulp-plumber": "1.2.*",
    "gulp-postcss": "8.0.*",
    "gulp-rename": "2.0.*",
